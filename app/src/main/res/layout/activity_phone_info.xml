<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register.Phone_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="What's your number?"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#DB7093"
            android:fontFamily="@font/berlindb"
            android:layout_weight="10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="100"
            android:gravity="center"
            android:layout_weight="10">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="center"
                android:background="@drawable/rounded_edit_text"
                android:hint="(###) - ### - ####"
                android:textSize="20dp"
                android:inputType="phone"
                android:id="@+id/phone_number_info"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/intro_layout_continue"
                android:layout_width="0dp"
                android:onClick="save_phone_number"
                android:layout_height="60dp"
                android:layout_weight="80"
                android:background="@drawable/continue_intro"
                android:hint="Continue..."
                android:textColorHint="#FFFFFF"
                android:clickable="true"
                android:fontFamily="@font/berlindb"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>